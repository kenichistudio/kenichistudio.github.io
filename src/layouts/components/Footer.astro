---
import { Twitter, Github, Linkedin, Youtube, Instagram } from "lucide-react";
---

<footer
    class="bg-neutral-950 text-neutral-400 py-20 border-t border-neutral-900"
>
    <div class="container mx-auto px-6">
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-8 mb-12">
            {/* Brand Column */}
            <div class="col-span-2 lg:col-span-2">
                <div
                    class="flex items-center gap-2 mb-6 text-white text-xl font-bold font-display"
                >
                    <img
                        src={`${import.meta.env.BASE_URL}assets/logos/variations/v2_black_bg.svg`}
                        alt="Kenichi Logo"
                        class="w-8 h-8"
                    />
                    Kenichi
                </div>
                <p
                    class="text-sm text-neutral-500 mb-6 max-w-xs leading-relaxed"
                >
                    The deterministic diagramming tool for professionals. Create
                    clear, editable visuals instantly from text.
                </p>
                <div class="text-xs text-neutral-600">
                    &copy; 2025 Kenichi Studio. All rights reserved.
                </div>
            </div>

            {/* Product */}
            <div>
                <h3 class="text-white font-bold mb-4">Product</h3>
                <ul class="space-y-4 text-sm">
                    <li>
                        <a href="#" class="hover:text-white transition-colors"
                            >How it works</a
                        >
                    </li>
                    <li>
                        <a href="#" class="hover:text-white transition-colors"
                            >Use Cases</a
                        >
                    </li>
                    <li>
                        <a href="#" class="hover:text-white transition-colors"
                            >Help Center</a
                        >
                    </li>
                </ul>
            </div>

            {/* Company */}
            <div>
                <h3 class="text-white font-bold mb-4">Company</h3>
                <ul class="space-y-3 text-sm">
                    <li>
                        <a
                            href={`${import.meta.env.BASE_URL}about`}
                            class="hover:text-white transition-colors"
                            >About us</a
                        >
                    </li>
                    <li>
                        <a href="#" class="hover:text-white transition-colors"
                            >Careers</a
                        >
                    </li>
                    <li>
                        <a
                            href={`${import.meta.env.BASE_URL}blog`}
                            class="hover:text-white transition-colors">Blog</a
                        >
                    </li>
                    <li>
                        <a href="#" class="hover:text-white transition-colors"
                            >Contact Us</a
                        >
                    </li>
                </ul>
            </div>

            {/* Privacy */}
            <div>
                <h3 class="text-white font-bold mb-4">Privacy</h3>
                <ul class="space-y-3 text-sm">
                    <li>
                        <a href="#" class="hover:text-white transition-colors"
                            >Terms and Conditions</a
                        >
                    </li>
                    <li>
                        <a href="#" class="hover:text-white transition-colors"
                            >Privacy Policy</a
                        >
                    </li>
                </ul>
            </div>
        </div>

        {/* Socials */}
        <div
            class="pt-8 border-t border-neutral-800 flex justify-end gap-6 mt-12"
        >
            <a
                href="#"
                class="text-neutral-500 hover:text-white transition-colors"
                ><Twitter size={20} /></a
            >
            <a
                href="#"
                class="text-neutral-500 hover:text-white transition-colors"
                ><Github size={20} /></a
            >
            <a
                href="#"
                class="text-neutral-500 hover:text-white transition-colors"
                ><Linkedin size={20} /></a
            >
            <a
                href="#"
                class="text-neutral-500 hover:text-white transition-colors"
                ><Youtube size={20} /></a
            >
            <a
                href="#"
                class="text-neutral-500 hover:text-white transition-colors"
                ><Instagram size={20} /></a
            >
        </div>
    </div>
</footer>

<style>
    .font-display {
        font-family: "Outfit", sans-serif;
    }
</style>
