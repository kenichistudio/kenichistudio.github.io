<style lang="scss">
    /* Converted SASS to SCSS */
    $wormDur: 0.4s;
    $radioDur: 0.2s;
    $timing1: cubic-bezier(0.45, 0.05, 0.55, 0.95);
    $timing2: cubic-bezier(0.5, 0, 0.5, 2);
    $radios: 3;

    /* Scoped wrapper styles replacing body/root */
    .worm-radio-wrapper {
        background: #e3e4e8;
        color: #17181c;
        font:
            1em Hind,
            sans-serif;
        line-height: 1.5;
        padding: 3em 0;
        border-radius: 12px;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;

        /* Simulate root font sizing if needed, but standardizing is better */
        font-size: 1.5rem;

        * {
            border: 0;
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }
    }

    form {
        display: block;
        margin: auto;
        max-width: 10em;
        position: relative;
    }

    input {
        position: fixed;
        top: -1.5em;
        left: -1.5em;
        /* Hide the actual input visually but keep accessible-ish */
        opacity: 0;
        pointer-events: none;
    }

    label {
        $shadowColor: rgba(0, 0, 0, 0.2);
        cursor: pointer;
        display: block;
        font-weight: bold;
        text-shadow: 0 0.1em 0.1em $shadowColor;
        transition: color $radioDur $timing1;
        &:not(:last-of-type) {
            margin-bottom: 1.5em; /* 3em * 0.5? No, previous was 1.5em */
        }
        span {
            box-shadow:
                0 0 0 0.2em currentColor inset,
                0 0.2em 0.2em $shadowColor,
                0 0.3em 0.2em $shadowColor inset;
            display: inline-block;
            margin-right: 0.5em;
            vertical-align: bottom;
            width: 1.5em;
            height: 1.5em;
            transition:
                transform $radioDur $timing2,
                box-shadow $radioDur $timing1,
                color $radioDur $timing1;
        }
    }

    /* Shared styles */
    label span,
    .worm__segment:before {
        border-radius: 50%;
    }

    /* Checked states */
    input:checked + label,
    input:checked + label span,
    .worm__segment:before {
        color: #255ff4;
    }

    input:checked + label {
        &,
        span {
            transition-delay: $wormDur;
        }
        span {
            transform: scale(1.2);
        }
    }

    .worm {
        top: 0.375em;
        left: 0.375em;
        &,
        &__segment {
            position: absolute;
            pointer-events: none; /* Let clicks pass through to labels */
        }
        &__segment {
            top: 0;
            left: 0;
            width: 0.75em;
            height: 0.75em;
            transition: transform $wormDur $timing1;
            &:before {
                animation-duration: $wormDur;
                animation-timing-function: $timing1;
                background: currentColor;
                content: "";
                display: block;
                width: 100%;
                height: 100%;
            }
            &:first-child,
            &:last-child {
                &:before {
                    box-shadow: 0 0 1em 0 currentColor;
                }
            }
        }
    }

    @for $s from 2 through 30 {
        $delay: calc($wormDur/100 * ($s - 1));
        .worm__segment:nth-child(#{$s}) {
            transition-delay: $delay;
            &:before {
                animation-delay: $delay;
            }
        }
    }

    /* States animation */
    @for $s from 1 through $radios {
        input:nth-of-type(#{$s}):checked ~ .worm .worm__segment {
            @if $s > 1 {
                transform: translateY(3em * ($s - 1));
            }
            &:before {
                animation-name: hop#{$s};
            }
        }

        /* Keyframes need to be global or appropriately scoped? 
       Astro scopes animations if used in scoped CSS. 
       Usually works fine.
    */
        @keyframes hop#{$s} {
            from,
            to {
                transform: translateX(0);
            }
            50% {
                transform: translateX(-1.5em);
            }
        }
    }

    /* Dark mode */
    @media screen and (prefers-color-scheme: dark) {
        .worm-radio-wrapper {
            background: #17181c;
            color: #e3e4e8;
        }

        input:checked + label,
        input:checked + label span,
        .worm__segment:before {
            color: #5583f6;
        }
    }
