---
import { ArrowRight, Sparkles } from "lucide-react";
---

<section class="py-24 bg-white relative overflow-hidden" id="cta-section">
    <div class="container mx-auto px-6 relative z-10">
        <div
            class="relative overflow-hidden rounded-[2.5rem] bg-gradient-to-br from-slate-900 via-slate-950 to-black p-12 md:p-24 text-center shadow-2xl shadow-slate-900/20"
        >
            {/* Background Effects */}
            <div
                class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full max-w-3xl opacity-30 pointer-events-none"
            >
                <div
                    class="absolute top-0 left-10 w-72 h-72 bg-blue-500 rounded-full blur-[100px] mix-blend-screen animate-blob"
                >
                </div>
                <div
                    class="absolute bottom-0 right-10 w-72 h-72 bg-purple-500 rounded-full blur-[100px] mix-blend-screen animate-blob animation-delay-2000"
                >
                </div>
            </div>

            <div class="relative z-10 max-w-3xl mx-auto">
                <div
                    class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-md border border-white/10 text-blue-200 text-sm font-bold uppercase tracking-wider mb-8 animate-on-scroll opacity-0 translate-y-8 transition-all duration-700"
                >
                    <Sparkles size={16} />
                    Start Building Today
                </div>

                <h2
                    class="text-5xl md:text-7xl font-bold text-white mb-8 font-display tracking-tight opacity-0 translate-y-8 transition-all duration-700 delay-100 animate-on-scroll"
                >
                    Ready to define your <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400"
                        >flow?</span
                    >
                </h2>

                <p
                    class="text-xl md:text-2xl text-slate-300 mb-12 leading-relaxed opacity-0 translate-y-8 transition-all duration-700 delay-200 animate-on-scroll"
                >
                    Join thousands of developers and designers creating clear,
                    editable visuals instantly from text.
                </p>

                <div
                    class="flex flex-col sm:flex-row items-center justify-center gap-4 opacity-0 translate-y-8 transition-all duration-700 delay-300 animate-on-scroll"
                >
                    <a
                        href={`${import.meta.env.BASE_URL}app`}
                        class="w-full sm:w-auto inline-flex items-center justify-center gap-3 bg-white text-slate-900 px-8 py-4 rounded-xl text-lg font-bold hover:bg-blue-50 transition-all hover:scale-105 shadow-xl group"
                    >
                        Get Started Free
                        <ArrowRight
                            className="w-5 h-5 group-hover:translate-x-1 transition-transform"
                        />
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    const observer = new IntersectionObserver(
        (entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    entry.target.classList.remove("opacity-0", "translate-y-8");
                    observer.unobserve(entry.target);
                }
            });
        },
        {
            threshold: 0.2, // Trigger when 20% visible
        },
    );

    document.querySelectorAll(".animate-on-scroll").forEach((el) => {
        observer.observe(el);
    });
</script>

<style>
    .font-display {
        font-family: "Outfit", sans-serif;
    }
</style>
