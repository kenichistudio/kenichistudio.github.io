---
import Layout from "../layouts/Layout.astro";
import Navbar from "@/layouts/components/Navbar.astro";
import { ArrowRight, Play, Sparkles } from "lucide-react";
---

<Layout title="Kenichi - Visuals from Text">
	<main
		class="min-h-screen bg-white dark:bg-white text-slate-900 dark:text-slate-900"
	>
		<!-- Navbar -->
		<Navbar />

		<!-- Hero Section -->
		<section class="relative pt-32 pb-20 px-6 overflow-hidden">
			<!-- Background Gradients -->
			<div
				class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full max-w-7xl -z-10 pointer-events-none"
			>
				<div
					class="absolute top-20 left-10 w-96 h-96 bg-blue-400/20 rounded-full blur-3xl mix-blend-multiply animate-blob"
				>
				</div>
				<div
					class="absolute top-20 right-10 w-96 h-96 bg-purple-400/20 rounded-full blur-3xl mix-blend-multiply animate-blob animation-delay-2000"
				>
				</div>
				<div
					class="absolute -bottom-32 left-1/2 w-96 h-96 bg-pink-400/20 rounded-full blur-3xl mix-blend-multiply animate-blob animation-delay-4000"
				>
				</div>
			</div>

			<div class="container mx-auto text-center max-w-4xl relative">
				<div
					class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/80 backdrop-blur-sm border border-slate-200 shadow-sm text-slate-600 text-xs font-bold uppercase tracking-wider mb-8 hover:scale-105 transition-transform cursor-default"
				>
					<span
						class="w-2 h-2 rounded-full bg-green-500 animate-pulse"
					></span>
					Beta Access Now Open
				</div>

				<h1
					class="text-6xl md:text-8xl font-bold text-slate-900 leading-[1.1] mb-8 tracking-tight"
				>
					Make <span
						class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-violet-600"
						>visuals</span
					><br />
					move faster.
				</h1>

				<p
					class="text-xl md:text-2xl text-slate-600 mb-12 max-w-2xl mx-auto leading-relaxed"
				>
					The all-in-one creative suite. Turn text into diagrams,
					animate keyframes, or build complex scenes in seconds.
				</p>

				<div
					class="flex flex-col sm:flex-row items-center justify-center gap-4"
				>
					<a
						href={`${import.meta.env.BASE_URL}create`}
						class="w-full sm:w-auto px-8 py-4 bg-slate-900 text-white font-bold rounded-2xl shadow-xl shadow-slate-900/20 hover:bg-slate-800 hover:scale-105 transition-all flex items-center justify-center gap-2 group"
					>
						<Sparkles size={20} className="text-yellow-300" />
						Create Diagram
					</a>
					<a
						href={`${import.meta.env.BASE_URL}animator`}
						class="w-full sm:w-auto px-8 py-4 bg-white text-slate-900 font-bold rounded-2xl border border-slate-200 shadow-sm hover:bg-slate-50 hover:border-slate-300 transition-all flex items-center justify-center gap-2"
					>
						<Play size={20} className="text-blue-600" />
						Open Animator
					</a>
				</div>
			</div>
		</section>
	</main>

	<section class="py-24 bg-slate-50 border-t border-slate-200">
		<div class="container mx-auto px-6">
			<div class="text-center mb-16">
				<h2 class="text-3xl md:text-5xl font-bold text-slate-900 mb-4">
					Explore the suite.
				</h2>
				<p class="text-slate-600 text-lg">
					Everything you need to tell your story.
				</p>
			</div>

			<div class="grid md:grid-cols-3 gap-8">
				<!-- Create Card -->
				<a
					href={`${import.meta.env.BASE_URL}create`}
					class="group bg-white p-8 rounded-3xl shadow-sm border border-slate-200 hover:shadow-xl hover:border-blue-200 hover:-translate-y-1 transition-all duration-300 relative overflow-hidden"
				>
					<div
						class="absolute top-0 right-0 p-8 opacity-10 group-hover:opacity-20 transition-opacity transform group-hover:scale-110 group-hover:rotate-12"
					>
						<Sparkles size={120} />
					</div>
					<div
						class="w-14 h-14 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center text-white mb-6 shadow-lg shadow-blue-500/30 group-hover:scale-110 transition-transform"
					>
						<Sparkles size={28} />
					</div>
					<h3
						class="text-2xl font-bold text-slate-900 mb-3 group-hover:text-blue-600 transition-colors"
					>
						Diagrams
					</h3>
					<p class="text-slate-600 leading-relaxed mb-6">
						Turn text lists into flowcharts, sequence diagrams, and
						mind maps instantly.
					</p>
					<div
						class="flex items-center text-blue-600 font-bold group-hover:translate-x-2 transition-transform"
					>
						Start Creating <ArrowRight size={16} className="ml-2" />
					</div>
				</a>

				<!-- Animator Card -->
				<a
					href={`${import.meta.env.BASE_URL}animator`}
					class="group bg-white p-8 rounded-3xl shadow-sm border border-slate-200 hover:shadow-xl hover:border-purple-200 hover:-translate-y-1 transition-all duration-300 relative overflow-hidden"
				>
					<div
						class="absolute top-0 right-0 p-8 opacity-10 group-hover:opacity-20 transition-opacity transform group-hover:scale-110 group-hover:rotate-12"
					>
						<Play size={120} />
					</div>
					<div
						class="w-14 h-14 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center text-white mb-6 shadow-lg shadow-purple-500/30 group-hover:scale-110 transition-transform"
					>
						<Play size={28} />
					</div>
					<h3
						class="text-2xl font-bold text-slate-900 mb-3 group-hover:text-purple-600 transition-colors"
					>
						Animator
					</h3>
					<p class="text-slate-600 leading-relaxed mb-6">
						Professional keyframe animation for motion graphics and
						visual storytelling.
					</p>
					<div
						class="flex items-center text-purple-600 font-bold group-hover:translate-x-2 transition-transform"
					>
						Open Studio <ArrowRight size={16} className="ml-2" />
					</div>
				</a>

				<!-- Studio Card (Full Suite) -->
				<a
					href={`${import.meta.env.BASE_URL}studio`}
					class="group bg-white p-8 rounded-3xl shadow-sm border border-slate-200 hover:shadow-xl hover:border-slate-300 hover:-translate-y-1 transition-all duration-300 relative overflow-hidden"
				>
					<div
						class="absolute top-0 right-0 p-8 opacity-5 group-hover:opacity-10 transition-opacity transform group-hover:scale-110 group-hover:rotate-12"
					>
						<div class="w-32 h-32 bg-slate-900 rounded-full"></div>
					</div>
					<div
						class="w-14 h-14 bg-slate-900 rounded-2xl flex items-center justify-center text-white mb-6 shadow-lg shadow-slate-900/30 group-hover:scale-110 transition-transform"
					>
						<span class="font-bold text-xl">K</span>
					</div>
					<h3
						class="text-2xl font-bold text-slate-900 mb-3 group-hover:text-slate-700 transition-colors"
					>
						Full Studio
					</h3>
					<p class="text-slate-600 leading-relaxed mb-6">
						Combine diagrams, images, and video in a powerful
						improved layout.
					</p>
					<div
						class="flex items-center text-slate-900 font-bold group-hover:translate-x-2 transition-transform"
					>
						Launch App <ArrowRight size={16} className="ml-2" />
					</div>
				</a>
			</div>
		</div>
	</section>

	<!-- Gallery / Inspiration Section -->
	<section class="py-32 bg-white relative overflow-hidden">
		<div class="container mx-auto px-6 mb-20">
			<div class="max-w-3xl">
				<h2
					class="text-5xl md:text-6xl font-bold text-slate-900 mb-6 font-display tracking-tight"
				>
					Built for
					<span class="text-blue-600">inspiration.</span>
				</h2>
				<p class="text-xl text-slate-600 leading-relaxed">
					Explore what's possible when you combine structured data
					with programmatic animation.
				</p>
			</div>
		</div>

		<div class="container mx-auto px-6">
			<div class="grid md:grid-cols-12 gap-6 h-[800px] md:h-[600px]">
				{/* Main Feature - 8 cols */}
				<div
					class="md:col-span-8 group relative rounded-[2.5rem] overflow-hidden bg-slate-900 shadow-2xl transition-all duration-500 hover:-translate-y-1"
				>
					{/* Background Gradient */}
					<div
						class="absolute inset-0 bg-gradient-to-br from-slate-800 to-black opacity-100 transition-opacity"
					>
					</div>

					{/* Content */}
					<div
						class="absolute inset-0 flex items-center justify-center p-12"
					>
						{/* Abstract Visualization */}
						<div
							class="relative w-full h-full border border-slate-700/50 rounded-2xl bg-slate-800/30 backdrop-blur-sm p-8 flex items-center justify-center"
						>
							<span class="text-slate-500 font-mono text-sm"
								>Interactive Graph Visualization</span
							>
						</div>
					</div>

					{/* Overlay Text */}
					<div
						class="absolute bottom-0 left-0 p-10 w-full bg-gradient-to-t from-black/90 via-black/50 to-transparent"
					>
						<span
							class="inline-block px-3 py-1 rounded-full bg-blue-500/20 text-blue-300 text-xs font-bold uppercase tracking-wider mb-3 border border-blue-500/30"
						>
							Featured
						</span>
						<h3 class="text-3xl font-bold text-white mb-2">
							Complex Systems
						</h3>
						<p class="text-slate-300">
							Visualize heavy data flows with clarity.
						</p>
					</div>
				</div>

				{/* Side Column - 4 cols */}
				<div class="md:col-span-4 flex flex-col gap-6 h-full">
					{/* Top Card */}
					<div
						class="flex-1 group relative rounded-[2.5rem] overflow-hidden bg-slate-50 border border-slate-200 hover:shadow-xl hover:border-blue-200 transition-all duration-300"
					>
						<div
							class="absolute inset-0 flex items-center justify-center"
						>
							<div
								class="w-24 h-24 bg-orange-100 rounded-full flex items-center justify-center text-orange-500"
							>
								<span class="font-bold text-2xl">A/B</span>
							</div>
						</div>
						<div class="absolute bottom-0 left-0 p-8 w-full">
							<h3 class="text-xl font-bold text-slate-900">
								Splits & Comparisons
							</h3>
						</div>
					</div>

					{/* Bottom Card */}
					<div
						class="flex-1 group relative rounded-[2.5rem] overflow-hidden bg-slate-50 border border-slate-200 hover:shadow-xl hover:border-purple-200 transition-all duration-300"
					>
						<div
							class="absolute inset-0 flex items-center justify-center"
						>
							<div
								class="w-24 h-24 bg-purple-100 rounded-full flex items-center justify-center text-purple-500"
							>
								<span class="font-bold text-2xl">Cycles</span>
							</div>
						</div>
						<div class="absolute bottom-0 left-0 p-8 w-full">
							<h3 class="text-xl font-bold text-slate-900">
								Loops & Feedback
							</h3>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Testimonials Section -->
	<section class="py-24 bg-slate-50 border-t border-slate-200">
		<div class="container mx-auto px-6 mb-16 text-center">
			<h2 class="text-3xl md:text-5xl font-bold text-slate-900 mb-6">
				Don't take our word for it.
			</h2>
		</div>

		<div class="container mx-auto px-6">
			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
				<!-- Testimonial 1 -->
				<div
					class="bg-white p-8 rounded-2xl shadow-sm border border-slate-100 hover:-translate-y-1 transition-transform duration-300"
				>
					<div class="flex gap-1 mb-4">
						{
							[1, 2, 3, 4, 5].map(() => (
								<svg
									class="w-4 h-4 text-amber-400 fill-current"
									viewBox="0 0 20 20"
								>
									<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
								</svg>
							))
						}
					</div>
					<p class="text-slate-600 mb-6 leading-relaxed">
						"I created 5 diagrams for my presentation in literally
						30 seconds. The hand-drawn style is actually clear
						enough for client meetings."
					</p>
					<div class="flex items-center gap-4">
						<div
							class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 font-bold"
						>
							JD
						</div>
						<div>
							<h4 class="font-bold text-slate-900 text-sm">
								John Doe
							</h4>
							<p class="text-slate-500 text-xs">
								Product Manager
							</p>
						</div>
					</div>
				</div>

				<!-- Testimonial 2 -->
				<div
					class="bg-white p-8 rounded-2xl shadow-sm border border-slate-100 hover:-translate-y-1 transition-transform duration-300"
				>
					<div class="flex gap-1 mb-4">
						{
							[1, 2, 3, 4, 5].map(() => (
								<svg
									class="w-4 h-4 text-amber-400 fill-current"
									viewBox="0 0 20 20"
								>
									<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
								</svg>
							))
						}
					</div>
					<p class="text-slate-600 mb-6 leading-relaxed">
						"Finally a tool that understands semantics. I typed a
						list and it gave me a hierarchy chart automatically.
						Huge timesaver."
					</p>
					<div class="flex items-center gap-4">
						<div
							class="w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center text-purple-600 font-bold"
						>
							SK
						</div>
						<div>
							<h4 class="font-bold text-slate-900 text-sm">
								Sarah King
							</h4>
							<p class="text-slate-500 text-xs">
								Content Creator
							</p>
						</div>
					</div>
				</div>

				<!-- Testimonial 3 -->
				<div
					class="bg-white p-8 rounded-2xl shadow-sm border border-slate-100 hover:-translate-y-1 transition-transform duration-300"
				>
					<div class="flex gap-1 mb-4">
						{
							[1, 2, 3, 4, 5].map(() => (
								<svg
									class="w-4 h-4 text-amber-400 fill-current"
									viewBox="0 0 20 20"
								>
									<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
								</svg>
							))
						}
					</div>
					<p class="text-slate-600 mb-6 leading-relaxed">
						"The export to transparent video is killer. I drop these
						straight into my Premiere timeline and it looks like I
						spent hours animating in After Effects."
					</p>
					<div class="flex items-center gap-4">
						<div
							class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center text-green-600 font-bold"
						>
							MR
						</div>
						<div>
							<h4 class="font-bold text-slate-900 text-sm">
								Mike Ross
							</h4>
							<p class="text-slate-500 text-xs">Video Editor</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- FAQ Section -->
	<section class="py-24 bg-white relative">
		<div
			class="container mx-auto px-6 grid md:grid-cols-2 gap-16 items-start"
		>
			<div>
				<h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">
					Frequently asked questions
				</h2>
				<p class="text-lg text-slate-600 mb-8">
					Can't find the answer you are looking for? Reach out to us <a
						href="#"
						class="text-blue-600 underline">here</a
					>.
				</p>
			</div>
			<div class="space-y-4">
				<div
					class="border border-slate-200 rounded-xl p-6 hover:border-slate-300 transition-colors cursor-pointer bg-slate-50"
				>
					<h3
						class="font-bold text-slate-900 flex justify-between items-center"
					>
						What is special about Kenichi?
						<ArrowRight size={16} className="text-slate-400" />
					</h3>
				</div>
				<div
					class="border border-slate-200 rounded-xl p-6 hover:border-slate-300 transition-colors cursor-pointer bg-slate-50"
				>
					<h3
						class="font-bold text-slate-900 flex justify-between items-center"
					>
						Is Kenichi free to use?
						<ArrowRight size={16} className="text-slate-400" />
					</h3>
				</div>
				<div
					class="border border-slate-200 rounded-xl p-6 hover:border-slate-300 transition-colors cursor-pointer bg-slate-50"
				>
					<h3
						class="font-bold text-slate-900 flex justify-between items-center"
					>
						Can I use Kenichi on mobile?
						<ArrowRight size={16} className="text-slate-400" />
					</h3>
				</div>
			</div>
		</div>
	</section>
</Layout>
